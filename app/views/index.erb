<div class="question-entries">

  <a class="new-question" href="/questions/new">Ask a question!</a>

  <ul>
    <% @questions.each do |question| %>

      <li class="question">
        <div class="votes">
          <p><%= vote_count(question) %></p>
          <p>Votes</p>
        </div>
        <a href="/questions/<%= question.id %>"><%= question.content %></a>
        <br>
        <span class="created">created <%= question.age %> ago<br>by</span>
        <a href="/users/<%= question.user_id %>"><%= question.display_name %></a>
      </li>
    <% end %>
  </ul>
</div>
