<h2><%= @question.content %></h2>
<span>created <%= @question.age %> ago by</span>
<a href="/users/<%= @question.user_id %>"><%= @question.display_name %></a><br>
<a href="/questions/<%= @question.id %>/comments/new">comment</a>

<h4>comments:</h4>
<% if @question.comments %>
  <ul>
    <% @question.comments.each do |comment| %>
      <li><%= comment.content %></li>
      <span>created <%= comment.age %> ago by</span>
      <a href="/users/<%= comment.user_id %>"><%= comment.display_name %></a><br>
    <% end %>
  </ul>
<% end %>

<% if @answers %>
<h4>answers:</h4>
  <% @answers.each do |answer| %>
    <blockquote id="answer">
      <%= answer.content %><br>
      <span>created <%= answer.age %> ago by</span>
      <a href="/users/<%= answer.user_id %>"><%= answer.display_name %></a><br>
      <a href="/answers/<%= answer.id %>/comments/new">comment</a>
      <% if answer.comments %>
      <h4>comments:</h4>
        <ul>
          <% answer.comments.each do |comment| %>
            <li><%= comment.content %></li>
            <span>created <%= comment.age %> ago by</span>
            <a href="/users/<%= comment.user_id %>"><%= comment.display_name %></a><br>
          <% end %>
        </ul>
      <% end %>
    </blockquote>
  <% end %>
<% end %>

<h3>Answer:</h3>
<form action="/answers" method="post">
  <textarea name="answer"></textarea>
  <br>
  <input type="submit" value="Submit">
</form>
